{
  "name": "lment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc --emitDeclarationOnly --declaration",
    "bundle": "esbuild --bundle --outfile=public/app.js ./src/index.ts",
    "clean": "rm -rf {lib,dist} && rm public/app.js",
    "serve": "serve public",
    "run": "node --loader ts-node/esm index.ts",
    "format": "prettier -w src/* src/**/* test/**/* test/*",
    "test": "LOG_LEVEL=warn NODE_ENV=test jest --collectCoverage"
  },
  "author": "",
  "license": "UNLICENCED",
  "dependencies": {
    "html-dom-parser": "^3.1.2",
    "html-tags": "^3.2.0",
    "lodash.memoize": "^4.1.2",
    "prettier": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "esbuild": "^0.16.12",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "serve": "^14.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
